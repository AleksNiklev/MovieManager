@model MovieViewModel
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<br />
<h3 class="text-danger">@TempData["apiError"]</h3>
<br />
<div class="table">
    <form asp-controller="Movie" asp-action="Update">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" value="@Model.Title" disabled="disabled" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Director">Director</label>
            <input asp-for="Director" class="form-control" value="@Model.Director" disabled="disabled" />
            <span asp-validation-for="Director"></span>

        </div>
        <div class="form-group">
            <label asp-for="ReleaseDate">Release Date</label>
            @Html.TextBoxFor(x => x.ReleaseDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @disabled = "disabled" })
            <span asp-validation-for="ReleaseDate"></span>
        </div>
    </form>
</div>
