@model IEnumerable<MovieViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<h2>Movies</h2>
<br />
<h3 class="text-danger">@TempData["apiError"]</h3>
<a class="btn btn-default" href="Movie/Create">Add Movie</a>
<br />
<br />
<table class="table table-striped table-bordered" id="myTable">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>Title</th>
            <th>Director</th>
            <th>Release Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <th><a href="Movie/Update/@movie.Id">Update</a></th>
            <th><a href="Movie/Details/@movie.Id">Details</a></th>
            <th>@movie.Title</th>
            <th>@movie.Director</th>
            <th>@movie.ReleaseDate.ToShortDateString()</th>
        </tr>
        }
    </tbody>
</table> 
<a href="api/movies" class="btn btn-success" target="_blank">Export JSON</a>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap.min.css" />

<script src="https://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.18/js/dataTables.bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>